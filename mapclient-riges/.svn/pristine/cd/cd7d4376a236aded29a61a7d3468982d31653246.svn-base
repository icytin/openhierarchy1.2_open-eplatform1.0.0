@CHARSET "ISO-8859-1";

.olPopup {
	background-color: #FFFFFF;
	border: 1px solid #DDDDDD;
	border-radius: 4px 4px 4px 4px;
	box-shadow: 0 0 4px rgba(0, 0, 0, 0.15);
	left: 25%;
	position: absolute;
	top: 50%;
	width: 360px !important;
	min-width: 320px;
	height: auto !important;
	z-index: 21000 !important;
	position: realtive;
	overflow: visible !important;
}

.mapquerydialog {
	width: auto !important;
	left: -999;
	top: -999;
}

.olPopup div {
	overflow: visible !important;
}

.olPopupContent {
	font-size: 15px;
    font-weight: 600;
    /*line-height: 1;*/
    padding: 12px 15px !important;
    height: auto !important;
	width: auto !important;
	text-align: center;
	color: #424242;
}

.olPopupContent .marker {
	background: url("../images/marker-sprite.png") no-repeat scroll 0 -10px rgba(0, 0, 0, 0);
	bottom: -10px;
    height: 10px;
    left: 50%;
    position: absolute;
    width: 16px;
}

.mapquerydialog .olPopupContent {
	float: left;
	text-align: left;
	font-weight: normal;
	line-height: 1.3;
	position: relative;
}

.mapquerydialog .olPopupContent p {
	margin: 0.5em 0;
}

.mapquerydialog .olPopupContent h1, .mapquerydialog .olPopupContent h2, .mapquerydialog .olPopupContent h3 {
	font-size: 1.17em;
	margin: 0;
	padding: 0;
}

.olPopupCloseBox {
	background: url("../images/close.png") no-repeat scroll 0 0 transparent !important;
	right: 5px !important;
	top: 5px !important;
}

.mapquerydialog .olPopupCloseBox {
	position: absolute;
	width: 17px;
	height: 17px;
}

.x-mask-msg-inner {
	border-radius: 4px 4px 4px 4px;
	font-size: 13px;
	padding: 5px;
}

.x-mask-msg-text {
	padding: 25px 13px 0 18px;
}

.x-form-text {
    background: none repeat-x scroll 0 0 #FFFFFF !important;
    border-color: #E7E7E7;
    border-style: solid;
    border-width: 1px;
    color: #424242 !important;
    height: auto !important;
    padding: 7px 7% !important;
    width: 86% !important;
    margin: 0 !important;
    display: block;
}

.attribution {
    background-color: rgba(255, 255, 255, 0.6);
    bottom: 2px;
    font-size: 11px;
    padding: 0 4px;
    position: absolute;
    right: 5px;
}