section {
	&.modal {
		position: relative;
		font-size: 16px;
		text-align: center;
		padding: 17px 30px;
		min-height: 0;

		span {

			&::before, &::after {
				margin-top: 6px;
			}
		}

		&.warning {
			background: #fffae1;
			border: 1px solid #c7c2a9;

			.close {
				&:hover {
					color: #000;
				}
			}
		}

		&.success {
			background: #29bf4c;
			border: 1px solid #21973c;
			color: #fff;
			text-shadow: 0 1px 0 #21973c;
			font-weight: 700;

			.close {
				&:hover {
					color: #21973c;
				}
			}
		}

		&.error {
			background: #e14343;
			border: 1px solid #930000;
			color: #fff;
			text-shadow: 0 1px 0 #930000;

			.close {
				&:hover {
					color: #930000;
				}
			}
		}

		.close {
			cursor: pointer;
			font-size: 9px;
			position: absolute;
			display: block;
			width: 9px;
			height: 9px;
			top: 0;
			bottom: 0;
			margin: auto;
			*top: 50%;
			*margin: 0;
			*margin-top: -4.5px;
			right: 20px;
		}
	}
}

.mini-modal {
	display: none;
	position: fixed;
	top: 46px;
	width: 100%;
	z-index: 500;
	text-align: center;

	.inner {
		display: inline-block;
		background: #fff9e2;
		font-weight: 400;
		border-radius: 3px;
		border: 1px solid #c7c1aa;
		line-height: 1;
		padding: 12px 16px;

		span {

			&::before {
				vertical-align: top;
				display: inline-block;
				font-family: 'riges-icons';
				speak: none;
				font-weight: normal;
				font-variant: normal;
				text-transform: none;
				margin-right: 4px;
				margin-top: 1px;
				font-size: 11px;
				-webkit-font-smoothing: antialiased;
				line-height: 1;
			}

		}
	}

	&.success {

		.inner {

			span {

				&::before {
					color: #35bd53;
					content: 'c';
				}
			}
		}
	}

	&.error {

		.inner {
			background: #fff6f6;
			border-color: #bd9393;

			span {

				&::before {
					color: #e14343;
					content: '!';
				}
			}
		}
	}
}